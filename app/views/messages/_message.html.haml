.messages__message
  .uper-message
    .uper-message__name
      = message.user.name
    .uper-message__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
      
  .lower-message
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image, class: 'lower-message__image' if message.image.present?