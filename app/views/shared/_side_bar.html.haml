.group
  .group__top
    .group__top__box 
      .group__top__box--name
        = current_user.name
      .group__top__box--icon
        = link_to edit_user_path(current_user), 'data-turbolinks': false do
          = fa_icon 'cog', class: "group__top--icon"
        = link_to '/groups/new' do
          = fa_icon 'pencil-square-o', class: "group__top--icon"
  .group-footer
    - current_user.groups.order(created_at: :DESC).each do |group|
      .group-footer__list
        = link_to "/groups/#{group.id}/messages", 'data-turbolinks': false do
          .group-footer__list--title
            = group.name
          .group-footer__list--text
            = group.show_last_message